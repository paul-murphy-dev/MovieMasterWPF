<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true">
  <class name="MovieMaster.Objects.Movie, MovieMaster" lazy="false">
    <id name="MovieID">
      <generator class="native" />
    </id>
    <property name="Name" column ="Name"/>
    <property name="Year" column="Year"/>
    <property name="GenreListID" column="GenreListID"/>
    <property name="ImageListID" column="ImageListID"/>
    <property name="LocalPath" column="LocalPath"/>
    <bag name="Genres" table="Account_Note">
      <key column="AccountId"/>
      <many-to-many class="Note" column="NoteId"/>
    </bag>
  </class>
</hibernate-mapping>